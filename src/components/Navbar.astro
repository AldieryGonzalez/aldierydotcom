---
import NavLink from './NavLink';
const pathname = new URL(Astro.request.url).pathname;
---

<nav class='flex items-center h-16 z-30 justify-between p-4 absolute top-0 left-0 right-0 bg-gray-800/60 text-white'>
	<div>
		<span class='text-lg font-semibold'>Aldiery Gonzalez</span>
	</div>
	<div class='flex justify-center space-x-4 rounded-full py-1 px-2'>
		<NavLink link='/' curPage={pathname} client:load>
			Home
		</NavLink>
		<NavLink link='/projects' curPage={pathname} client:load>
			Projects
		</NavLink>
		<NavLink link='/about' curPage={pathname} client:load>
			Looking Forward
		</NavLink>
	</div>		
	<div class='sm:flex gap-4 hidden'>
		<a href='#' class='text-xl'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='24'
				height='24'
				viewBox='0 0 24 24'
				fill='none'
				stroke='currentColor'
				stroke-width='2'
				stroke-linecap='round'
				stroke-linejoin='round'
				class='lucide lucide-github'
				><path
					d='M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4'
				></path><path d='M9 18c-4.51 2-5-2-7-2'></path></svg
			>
		</a>
		<a href='#' class='text-xl'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='24'
				height='24'
				viewBox='0 0 24 24'
				fill='none'
				stroke='currentColor'
				stroke-width='2'
				stroke-linecap='round'
				stroke-linejoin='round'
				class='lucide lucide-linkedin'
				><path
					d='M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z'
				></path><rect width='4' height='12' x='2' y='9'></rect><circle
					cx='4'
					cy='4'
					r='2'></circle></svg
